<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/mySpinnerSourceUnit"
        android:layout_width="279dp"
        android:layout_height="67dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="42dp"
        android:gravity="center_horizontal"
        android:spinnerMode="dropdown"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextViewSourceUnit" />

    <Button
        android:id="@+id/myButtonConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="239dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="68dp"
        android:text="@string/convertButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mySpinnerDestinationUnit" />

    <TextView
        android:id="@+id/myTextViewSourceUnit"
        android:layout_width="158dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="229dp"
        android:gravity="center"
        android:text="@string/mySpinnerStart"
        android:textAlignment="viewStart"
        android:textColor="#9360EF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextEnterNumber" />

    <TextView
        android:id="@+id/myTextViewDestinationUnit"
        android:layout_width="148dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="239dp"
        android:gravity="center"
        android:text="@string/mySpinnerEnd"
        android:textAlignment="viewStart"
        android:textColor="#9360EF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mySpinnerSourceUnit" />

    <Spinner
        android:id="@+id/mySpinnerDestinationUnit"
        android:layout_width="278dp"
        android:layout_height="61dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="41dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextViewDestinationUnit" />

    <TextView
        android:id="@+id/myTextViewValue"
        android:layout_width="123dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="264dp"
        android:gravity="center"
        android:text="@string/value"
        android:textAlignment="viewStart"
        android:textColor="#9360EF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myTextAnswer"
        android:layout_width="347dp"
        android:layout_height="61dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="49dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="#9360EF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myButtonConvert" />

    <EditText
        android:id="@+id/myTextEnterNumber"
        android:layout_width="261dp"
        android:layout_height="63dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="41dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#9360EF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextViewValue" />

</androidx.constraintlayout.widget.ConstraintLayout>